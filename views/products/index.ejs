<% layout("/layouts/boilerplate") %>
    <h3>All Products</h3>
    <!-- <form method="GET" action="/products/new">
        <button>
            Create New Product
        </button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let product of allProducts) { %>
        <a href="/products/<%= product._id %>" class="product-link">
    <div class="card col" >
        <img src="<%= product.image %>" class="card-img-top" 
        alt="Product-Image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= product.title %></p></b>
          <p class="card-text"><b>&#8377;</b><%= product.price.toLocaleString("en-In") %> /only</p>
        </div>
      </div>
    </a> 
      <% } %>
    </div>
   

