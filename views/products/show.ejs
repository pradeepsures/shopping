<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>Product Details:</h3>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= product.image %>" class="card-img-top show-img" alt="product-img">
        <div class="card-body">
          <p class="card-text">
            <b><%= product.title %></b><br>
            <%= product.description %><br>
            &#8377;<%= product.price.toLocaleString("en-In") %>
        </p>
        </div>
    </div>
</div>
<div class="btns">
    <a href="/products/<%= product._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

<form method="POST" action="/products/<%=product._id %>?_method=DELETE">
   <button class="btn btn-dark offset-5">Delete</button>
</form>
</div>

