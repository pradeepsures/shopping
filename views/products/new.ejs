<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Create a New Product</h3>
    <form method="POST" action="/products">
        <div class="mb-3">
        <lable for="title" class="form-lable">Enter title</lable>
       <input name="product[title]" 
       placeholder="Add a title" 
       type="text" 
       class="form-control"
       required
       />
    </div>
       
    <div class="mb-3">
       <lable for="description" class="form-lable">Enter description</lable>
       <textarea name="product[description]" 
       type="text" 
       class="form-control"
       required
       >
    </textarea>
    </div>
    <div class="mb-3">
       <lable for="image" class="form-lable">Enter image link</lable>
       <input name="product[image]" 
       placeholder="Enter image-url/link" 
       type="text" 
       class="form-control"
       />
    </div>
    <div class="mb-3">
       <lable for="price" class="form-lable">Enter price</lable>
       <input name="product[price]" 
       placeholder="1200" 
       type="number" 
       class="form-control"
       required
       />
    </div>
    <br>
       <button class="btn btn-dark add-btn">Add</button>
    </form>
</div>
</div>

